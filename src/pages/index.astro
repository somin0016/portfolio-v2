---
/* component imports */
import Layout from "../layouts/Layout.astro";
import Timeline from "../components/Timeline/Timeline.astro";
import Section from "../components/Elements/Section/Section.astro";
import FeaturedProjectCard from "../components/FeaturedProjects/FeaturedProjectCard";

/* init */
const skills = [
  {
    category: "Languages",
    skills: ["C#", "Java", "JavaScript", "TypeScript", "Ruby", "HTML & CSS"],
  },
  {
    category: "Frameworks",
    skills: ["ASP.NET", "Spring", "React", "NestJS", "NodeJS"],
  },
  {
    category: "Databases",
    skills: ["MSSQL", "Postgres", "Mongo", "Redis"],
  },
  {
    category: "Tools",
    skills: ["Git", "AWS RDS", "Docker", "Jenkins", "ArgoCD", "Figma"],
  },
];

const featuredProjects = [
  {
    name: "smthant.com",
    description: "This website ~",
    color: "#C23A1B",
    slug: "smthant",
    links: [
      { name: "GitHub", url: "https://github.com/somin0016/portfolio-v2" },
      { name: "Blog", url: "https://blog.smthant.com/making-portfolio-v02/" },
    ],
  },
  {
    name: "SpaceShare",
    description: "Room and Roommate Finding Web App",
    color: "#14AE5C",
    slug: "spaceshare",
  },
  {
    name: "Maid",
    description: "A DiscordJS Bot",
    color: "#0D99FF",
    slug: "maid",
    links: [{ name: "GitHub", url: "https://github.com/somin0016/maid_v3" }],
  },
  {
    name: "Collectibles",
    description: "Social Media Web App for Collectors",
    color: "#FFCD29",
    slug: "collectibles",
    links: [{ name: "GitHub", url: "https://github.com/shinymaid/AWP" }],
  },
];
---

<Layout>
  <!-- INTRO STARTS -->
  <Section>
    <div class="grid sm:grid-cols-3 gap-4 pt-8 items-center">
      <div class="sm:col-span-2 flex flex-col order-2 sm:order-1">
        <div class="mb-8 text-dark">
          <p class="">Hello,</p>
          <h1 class="text-3xl font-bold tracking-tight">
            I'm Soe Min Thant! ðŸ‘‹
          </h1>
        </div>
        <p class="text-base font-normal text-dark">
          A Software Engineer who focuses on building websites. And yes, you
          might catch me listening to{" "}
          <span class="italic underline decoration-dotted"> K-pop </span>{" "}
          while coding.{" "}
          <span class="text-gray-600 dark:text-zinc-400"
            >(I think it helps..)</span
          >
        </p>
        <div class="mt-4">
          <p>
            To reach out, simply email me at
            <a
              href={`mailto:`}
              class="sm--link relative whitespace-nowrap ml-1 text-blue-600"
            >
              tsoominn@gmail.com
            </a>
          </p>
        </div>
      </div>
      <div class="sm:col-span-1 order-1 sm:order-2">
        <img
          class="w-40 sm:w-52 rounded-md"
          src="./smt_pfp.jpg"
          alt="Soe Min Thant"
        />
      </div>
    </div>
  </Section>
  <!-- INTRO ENDS -->

  <!-- ABOUT STARTS -->
  <Section title="About Me" circle="#0D99FF">
    <div class="grid grid-cols-3 gap-2">
      <div class="col-span-3">
        <p class="mb-3">
          I am a 23-year-old Software Engineer with a passion for crafting web
          applications. My journey into the realm of coding began in 2016,
          marking the start of my exploration into various programming
          languages. Currently pursuing my studies in Software Engineering in
          Singapore.
        </p>
        <p class="mb-3">
          One of my biggest interests is examining how different projects are
          built, especially their architecture and code structures. This helps
          me constantly learn and grasp how complex applications are put
          together.
        </p>
        {/* <ResumeButton /> */}
        <div class="flex items-center">
          <span>
            Here is my resume
            <span class="ml-2">ðŸ‘‰</span>
          </span>
          <div
            id="resume-button"
            class="sm--link relative whitespace-nowrap ml-2 inline-flex justify-center items-center gap-1 text-blue-600 hover:cursor-pointer"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              class="w-4 h-4"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M19.5 14.25v-2.625a3.375 3.375 0 0 0-3.375-3.375h-1.5A1.125 1.125 0 0 1 13.5 7.125v-1.5a3.375 3.375 0 0 0-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 0 0-9-9Z"
              ></path>
            </svg>
            soeminthant.pdf
          </div>
        </div>
        <div class="mt-4">
          <p>
            Oh, and I also have a
            <a
              href={`https://blog.smthant.com`}
              rel="noreferrer"
              target="_blank"
              class="sm--link relative whitespace-nowrap mx-1 text-blue-600"
            >
              personal blog
            </a>
            ðŸ“–
          </p>
        </div>
      </div>
    </div>
  </Section>
  <!-- ABOUT ENDS -->

  <!-- PROJECTS STARTS -->
  <Section title="Featured Projects" circle="#FFCD29">
    <div class="grid sm:grid-cols-2 gap-2 sm:gap-4">
      {
        featuredProjects.map((project, index) => (
          <FeaturedProjectCard project={project} client:load />
        ))
      }
    </div>
  </Section>
  <!-- PROJECTS ENDS -->

  <!-- TIMELINE STARTS -->
  <Section title="My Career Story" circle="#F24822">
    <Timeline />
  </Section>
  <!-- TIMELINE ENDS -->

  <!-- SKILLS STARTS -->
  <Section title="My Dev Toolkit" circle="#14AE5C">
    <div class="mb-20">
      {
        skills.map(({ category, skills }, index, array) => (
          <div
            class={`w-full min-[420px]:grid min-[420px]:grid-cols-4 gap-4 py-6 ${index === array.length - 1 ? "" : "border-b border-gray-200 dark:border-gray-600"}`}
          >
            <div class="col-span-1">
              <span class="relative text-md block font-medium mb-4 min-[420px]:mb-0">
                {category}
              </span>
            </div>
            <div class="col-span-3 flex flex-wrap gap-x-4 sm:gap-x-6 gap-y-1">
              {skills.map((skill, index) => (
                <div class="block pb-2 text-sm font-normal leading-relaxed text-gray-600 dark:text-zinc-300">
                  {skill}
                </div>
              ))}
            </div>
          </div>
        ))
      }
    </div>
  </Section>
  <!-- SKILLS ENDS -->
</Layout>
