---
interface Props {
  label: string;
  date: string;
  title: string;
  content: string;
}

const { label, date, title, content } = Astro.props;
---

<div class="relative pl-8 sm:pl-32 py-6 group">
  {/* Purple label */}
  {
    /* <div class="font-caveat font-medium text-2xl text-indigo-500 mb-1 sm:mb-0">
    
    {label}
  </div> */
  }
  {/* Vertical line (::before) ~ Date ~ Title ~ Circle marker (::after) */}
  <div
    class="flex flex-col sm:flex-row items-start mb-1 group-last:before:hidden before:absolute before:left-2 sm:before:left-0 before:h-full before:px-px before:pr-0 before:bg-slate-300 sm:before:ml-[6.5rem] before:self-start before:-translate-x-1/2 before:translate-y-3 after:absolute after:left-2 sm:after:left-0 after:w-2 after:h-2 after:bg-smRed-strong after:border-4 after:box-content after:border-slate-50 after:rounded-full sm:after:ml-[6.5rem] after:-translate-x-1/2 after:translate-y-1.5"
  >
    <time
      class="sm:absolute left-0 translate-y-0.5 inline-flex items-center justify-center text-xs font-semibold uppercase w-20 h-6 mb-3 sm:mb-0 text-smText bg-smWhite border border-smBorder rounded-full"
    >
      {date}
    </time>
    <div class="text-lg font-semibold tracking-tight">
      {title}
      <div class="text-sm font-medium tracking-normal italic text-gray-700">
        {label}
      </div>
    </div>
  </div>
  {/* Content */}
  <div class="text-sm font-normal leading-relaxed text-gray-600">{content}</div>
</div>
